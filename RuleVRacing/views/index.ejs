<% include partials/header.ejs %>


<div class = "container">
    <div class = "container">
        <header class = "jumbotron">
            <h1>CAMPS ARE HERE</h1> 
            <h4>View our camps</h4>
            <p>
                <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add new a new member</a>
            </p>
        </header>
        
        <div class = "row text-center" style = "display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(camp) { %>
                <div class = "col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src = "<%= camp.image %>" alt="Cinque Terre">
                        <div class = "caption">
                            <h4><%= camp.name %></h4>
                        </div>
                        <p>
                            <a href = "/campgrounds/<%= camp._id %>" class = "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>
